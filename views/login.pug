extends layout


block content
 .container
   .row.justify-content-center.align-items-center
     .col-sm-6.my-5
       .card
         .card-body
           h2.card-title.text-center Login
           form(action="/login", method="post")
             .form-group
               label(for="email") Email:
               input.form-control(type="email", name="email", required)
             .form-group
               label(for="password") Password:
               input.form-control(type="password", name="password", required)
             button.btn.btn-primary.btn-block(type="submit") Login
           p.text-center.my-3
             a(href="/signup") Don't have an account? Sign up here.



